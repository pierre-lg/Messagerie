{% extends 'base.html.twig' %}
{% block content %}
	<body>
		<div class="container">
			<div class="inbox_msg mt-5">
				<div class="headind_srch">
					<div class="row">
						<div class="col d-flex align-items-center">
							<h4>Recent</h4>
						</div>
						<div class="col ml-auto">
							<img src="{{ asset('logo/logo.png') }}" id="icon" alt="User Icon"/>
						</div>
					</div>
				</div>
				<div class="inbox_chat">
					{% for group in app.user.groups %}

						<div class="chat_list">
							<div class="chat_people">
								<div class="chat_img">
									<img src={{ asset('img/groups/') ~ group.photo }} class="groupImg">
								</div>
								<div class="chat_ib">
									<h5>{{ group.name }}<span class="chat_date"><!-- date du dernier message --></span>
									</h5>
									<p><!-- previe du dernier message --></p>
								</div>
								<div class="col text-right">
									<button type="button" class="btn-lg btn-info">
										<a href="{{ path('conv', {id : group.id}) }}" style="text-decoration:none; color:white;">></a>
									</button>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
			<div class="row mt-3 mb-3">
				<div class="col">
					<button type="button" class="btn-lg btn-info">
						<a href="{{ path('newGroup') }}" style="text-decoration:none; color:white;">Ajouter Groupe</a>
					</button>
				</div>
				<div class="col">
					<button type="button" class="btn-lg btn-danger">
						<a href="{{ path('logout') }}" style="text-decoration:none; color:white;">Log Out</button>
					</div>
				</div>
			</body>
		{% endblock %}
